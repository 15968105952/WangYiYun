<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/total_duration_layout"
    android:layout_width="match_parent"
    android:layout_height="55dp"
    android:layout_below="@+id/video_count_layout"
    android:layout_marginLeft="30dp"
    android:layout_marginRight="30dp"
    tools:showIn="@layout/video_shoot_activity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:text="@string/total_duration"
        android:textColor="@color/color_gray_F7736C6B"
        android:textSize="14sp" />

    <RadioGroup
        android:id="@+id/time_radio_group"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:orientation="horizontal">

        <RadioButton
            android:id="@+id/first_time"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginRight="30dp"
            android:button="@null"
            android:paddingLeft="3dp"
            android:paddingRight="3dp"
            android:text="6s"
            android:textColor="@drawable/radio_text_color" />

        <RadioButton
            android:id="@+id/second_time"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginRight="30dp"
            android:button="@null"
            android:checked="true"
            android:paddingLeft="3dp"
            android:paddingRight="3dp"
            android:text="10s"
            android:textColor="@drawable/radio_text_color" />

        <RadioButton
            android:id="@+id/third_time"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:button="@null"
            android:paddingLeft="3dp"
            android:paddingRight="3dp"
            android:text="30s"
            android:textColor="@drawable/radio_text_color" />
    </RadioGroup>
</RelativeLayout>