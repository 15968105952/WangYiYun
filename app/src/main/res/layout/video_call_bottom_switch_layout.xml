<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/avchat_incoming_control"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:baselineAligned="false"
    android:gravity="center"
    android:orientation="vertical"
    android:visibility="visible">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:baselineAligned="false"
        android:gravity="center"
        android:orientation="horizontal"
        android:visibility="visible">

        <ImageView
            android:id="@+id/avchat_video_logout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/circle_shape"
            android:contentDescription="@string/empty"
            android:padding="10dp"
            android:scaleType="centerInside"
            android:src="@drawable/avchat_bottom_logout_selector" />

        <Chronometer
            android:id="@+id/avchat_video_time"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerInParent="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="5dp"
            android:layout_weight="1"
            android:textColor="@color/white"
            android:textSize="13sp"
            android:visibility="visible" />

        <ImageView
            android:id="@+id/avchat_video_mute"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/circle_shape_white"
            android:contentDescription="@string/empty"
            android:padding="10dp"
            android:layout_marginRight="30dp"
            android:scaleType="centerInside"
            android:src="@drawable/avchat_mute_bg" />

        <TextView
            android:textColor="@color/white"
            android:id="@+id/avchat_video_record"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:contentDescription="@string/empty"
            android:background="@drawable/circle_shape_white"
            android:text="发约"
            android:layout_marginRight="30dp"
            android:gravity="center"
            />

        <ImageView
            android:id="@+id/avchat_switch_camera"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginRight="10dp"

            android:background="@drawable/circle_shape"
            android:contentDescription="@string/empty"
            android:padding="10dp"
            android:scaleType="centerInside"
            android:src="@drawable/message_plus_red_packet_normal" />
    </LinearLayout>

    <ImageView
        android:id="@+id/iv_send_redpackage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:src="@drawable/message_plus_red_packet_normal"
        android:visibility="invisible" />
</LinearLayout>